<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android=
    "http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.clientserverassignment.MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        tools:context="com.example.clientserverassignment.MainActivity">
        <TextView
            android:id="@+id/texViewValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Value"/>
        <EditText
            android:id="@+id/editTextValue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        tools:context="com.example.dataaccesobjsqlprac.MainActivity">
        <ImageView
            android:id="@+id/viewDatabaseImageView"
            android:layout_width="120dp"
            android:layout_height="80dp"
            android:padding="5dp"
            android:onClick="clickedShow"/>
        <ImageView
            android:id="@+id/deleteDatabaseImageView"
            android:layout_width="120dp"
            android:layout_height="80dp"
            android:padding="5dp"
            android:onClick="clickedDelete"/>
        <ImageView
            android:id="@+id/editDatabaseImageView"
            android:layout_width="120dp"
            android:layout_height="80dp"
            android:padding="5dp"
            android:onClick="editRecord"/>
    </LinearLayout>
    <TextView
        android:id="@+id/textViewResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16dp"/>
</LinearLayout>